<div class="container my-5 col-6">
  <h1>Đánh giá</h1>
  <div class="shadow-5-strong rounded-5 overflow-hidden">
    <div class="m-3">
      <h3 class="d-inline-block">Booking ID :</h3>
      <button class="btn btn-outline-primary btn-lg d-inline-block">
        <%= id %>
      </button>
    </div>
    <div class="m-3">
      <form action="" method="post"><div>
        <div class="form-outline" data-mdb-input-init>
          <textarea
            class="form-control"
            id="textAreaExample"
            rows="4"
            name="comment"
          ></textarea>
          <label class="form-label" for="textAreaExample"
            >Đánh giá chất lượng</label
          >
        </div>
      </div>
      <div>
        <label class="form-label" for="customRange2"
        >Kéo thả để chấm điểm</label
      >
      <div class="range" data-mdb-range-init>
        <input type="range" class="form-range" min="0" max="10" name="rating" />
      </div>
      </div>
      <div class="d-flex align-items-center justify-content-center my-3">
        <button class="btn btn-primary btn-lg" type="submit">Gửi đánh giá</button>
      </div></form>
      
      </div>
    </div>
  </div>
</div>
