<div class="container my-5 col-6">
  <h1>Tạo booking mới</h1>
  <div class="shadow-5-strong rounded-5 overflow-hidden">
    <div class="m-3">
      <form action="" method="post">
        <select
          class="form-select"
          aria-label="Default select example"
          name="productId"
        >
          <option selected>Lựa chọn dịch vụ bạn mong muốn</option>
          <option value="1">Chụp ảnh chân dung</option>
          <option value="2">Chụp ảnh phóng sự cưới</option>
          <option value="3">Chụp ảnh kiến trúc</option>
          <option value="3">Chụp ảnh kiến phong cảnh</option>
        </select>
        <div class="input-group my-3">
          <span class="input-group-text border-0"
            ><i class="fas fa-map-marker-alt"></i
          ></span>
          <input
            type="text"
            class="form-control rounded"
            placeholder="Nhập địa chỉ"
            name="location"
          />
        </div>
        <div class="row">
          <div class="input-group my-3 col">
            <label for="" class="mx-3">Bắt đầu</label>
            <input
              type="datetime-local"
              class="form-control rounded"
              name="startAt"
            />
          </div>
          <div class="input-group my-3 col">
            <label for="" class="mx-3">Kết thúc</label>
            <input
              type="datetime-local"
              class="form-control rounded"
              name="endAt"
            />
          </div>
        </div>
        <div>
          <div class="form-outline" data-mdb-input-init>
            <textarea class="form-control" rows="4" name="note"></textarea>
            <label class="form-label" for="textAreaExample"
              >Ghi chú cho studio</label
            >
          </div>
        </div>
        <div class="d-flex align-items-center justify-content-center">
          <button
            type="submit"
            class="btn btn-outline-primary btn-lg my-3"
            data-mdb-ripple-init
            data-mdb-ripple-color="dark"
          >
            Tạo Booking mới
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
